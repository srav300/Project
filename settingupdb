FOR LINUX (go to this link for windows or mac http://www.tutorialspoint.com/sqlite/sqlite_installation.htm)

$ tar xvfz sqlite-autoconf-3081101.tar.gz
$ cd sqlite-autoconf-3081101
$ ./configure
$ make
$ sudo make install

FOR LINUX  (go to this link for windows or mac http://www.tutorialspoint.com/sqlite/sqlite_perl.htm)

To install the Perl DBI API
$ wget http://search.cpan.org/CPAN/authors/id/T/TI/TIMB/DBI-1.634.tar.gz
$ tar xvfz DBI-1.634.tar.gz
$ cd DBI-1.634
$ perl Makefile.PL
$ make
$ sudo make install

To install SQLite driver for DBI
$ wget http://search.cpan.org/CPAN/authors/id/M/MS/MSERGEANT/DBD-SQLite-1.14.tar.gz
$ tar xvfz DBD-SQLite-1.14.tar.gz
$ cd DBD-SQLite-1.14
$ perl Makefile.PL
$ make
$ sudo make install

To run CGI script locally in ubuntu
sudo get-app install apache2
mv index.cgi /usr/lib/cgi-bin
mv images /var/www/html
mv css /var/www/html
mv fonts /var/www/html
mv js /var/www/html
cd /usr/lib/cgi-bin
chmod +X XXXXX.cgi
sudo a2enmod cgi
sudo service apache2 restart


CREATE TABLE user (
	id INTEGER PRIMARY KEY,
	fName TEXT,
	lName TEXT,
	username TEXT,
	password TEXT,
	email TEXT,
	height INTEGER,
	weight INTEGER,
	dob TEXT,
	goal TEXT
);

CREATE TABLE weight (
	value INTEGER,
	userid INTEGER,
	year INTEGER,
	month INTEGER,
	day INTEGER,
	time INTEGER,
	FOREIGN KEY(userid) REFERENCES user(id)
);

create TABLE meal (
	id INTEGER PRIMARY KEY,
	userid INTEGER,
	name TEXT,
	date TEXT,
	time INTEGER,
	FOREIGN KEY(userid) REFERENCES user(id)
);

create TABLE food (
	id INTEGER PRIMARY KEY,
	name TEXT,
	energy TEXT,
	protein TEXT,
	fat TEXT,
	monounsatfat TEXT,
	polyunsatfat TEXT,
	satfat TEXT,
	transfat TEXT,
	carbs TEXT,
	fibre TEXT,
	sugars TEXT,
	cholesterol TEXT
);

create TABLE minerals (
	fid INTEGER,
	calcium TEXT,
	iron TEXT,
	magnesium TEXT,
	manganese TEXT,
	phosphorous TEXT,
	potassium TEXT,
	sodium TEXT,
	zinc TEXT,
	FOREIGN KEY(fid) REFERENCES food(id)
);

create TABLE vitamins (
	fid INTEGER,
	A TEXT,
	B1 TEXT,
	B2 TEXT,
	B3 TEXT,
	B5 TEXT,
	B6 TEXT,
	B7 TEXT,
	B9 TEXT,
	B12 TEXT,
	C TEXT,
	D TEXT,
	E TEXT,
	K TEXT,
	FOREIGN KEY(fid) REFERENCES food(id)
);

create TABLE meal_contains (
	mid INTEGER,
	fid INTEGER,
	FOREIGN KEY(mid) REFERENCES meal(id),
	FOREIGN KEY(fid) REFERENCES food(id)
);

insert into user values(NULL,'Aaron','Oni','aoni','gainsbruh','aarononi@optusnet.com.au',183,84,'10/12/1994','gain');
//inserting null into an 'integer primary key' will autoincrement
